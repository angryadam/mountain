<div class='columns nested-fields'>
	<div class="column is-3">
		<%= f.text_field :name, class: 'input', maxlength: 100, placeholder: 'Name' %>
	</div>
	<div class="column is-3">
		<%= f.number_field :principle, class: 'input', in: 1..10_000_000, placeholder: 'Amount Owed' %>
	</div>
	<div class="column is-3">
		<%= f.number_field :payment, value: number_with_precision(f.object.payment, precision: 2),
		                   class: 'input', step: 0.01, in: 1..10_000_000, placeholder: 'Payment' %>
	</div>
	<div class="column is-2">
		<%= f.number_field :interest, value: number_with_precision(f.object.interest, precision: 3),
		                   class: 'input', step: 0.001, in: 0..(24.99), placeholder: 'APR %' %>
	</div>
	<div class="column is-2">
		<%= link_to_remove_association f do %>
			<i class="fas fa-times"></i>
		<% end %>
	</div>
</div>
<hr>
