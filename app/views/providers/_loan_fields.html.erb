<div class='columns nested-fields'>
	<div class="column is-3">
		<%= f.text_field :name, class: 'input', maxlength: 100 %>
	</div>
	<div class="column is-2">
		<%= f.number_field :principle, class: 'input', in: 1..10_000_000 %>
	</div>
	<div class="column is-2">
		<%= f.number_field :payment, class: 'input', step: 0.01, in: 1..10_000_000 %>
	</div>
	<div class="column is-2">
		<%= f.number_field :interest, class: 'input', step: 0.01, in: 0..(24.99) %>
	</div>
	<div class="column is-2">
		<%= link_to_remove_association f do %>
			<i class="fas fa-times"></i>
		<% end %>
	</div>
</div>
